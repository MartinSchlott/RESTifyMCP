{
  "name": "restifymcp",
  "version": "1.1.0",
  "type": "module",
  "description": "A tool that makes MCP (Model Context Protocol) servers available as REST APIs",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node-esm src/index.ts",
    "build": "tsc && mkdir -p dist/server/static && cp -r src/server/static/* dist/server/static/",
    "watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "rest",
    "api",
    "anthropic",
    "openapi"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.24",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/cookie-parser": "^1.4.8",
    "commander": "^13.1.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.0.1",
    "js-yaml": "^4.1.0",
    "openapi3-ts": "^4.4.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  }
}
